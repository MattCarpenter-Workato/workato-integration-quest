# Integration Quest - Environment Configuration
# Copy this file to .env and fill in your values for local development

# =============================================================================
# GAME MODE
# =============================================================================
# Set to "true" for multiplayer mode with MongoDB + SendGrid
# Leave empty or "false" for single-player mode (JSON file storage)
MULTIPLAYER_MODE=false

# =============================================================================
# MULTIPLAYER SETTINGS (only required if MULTIPLAYER_MODE=true)
# =============================================================================
# MongoDB connection string
# Example: mongodb+srv://user:password@cluster.mongodb.net/integration-quest
MONGODB_URI=

# SendGrid API key for email verification
# Get one at: https://sendgrid.com/
SENDGRID_API_KEY=

# Email address to send verification emails from
FROM_EMAIL=noreply@example.com
